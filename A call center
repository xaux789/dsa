queue = []

def addCall():
    customerID = input("Enter Customer ID: ")
    callTime = input("Enter Call Time (in minutes): ")
    call = {"CustomerID": customerID, "CallTime": callTime}
    queue.append(call)
    print("Call added to queue!")

def answerCall():
    if len(queue) == 0:
        print("No calls to answer.")
    else:
        call = queue.pop(0)
        print("Answering call of Customer:", call["CustomerID"], "Call Time:", call["CallTime"])

def viewQueue():
    if len(queue) == 0:
        print("Queue is empty.")
    else:
        print("Current Call Queue:")
        for i, call in enumerate(queue, 1):
            print(i, "Customer ID:", call["CustomerID"], ", Call Time:", call["CallTime"])

def isQueueEmpty():
    if len(queue) == 0:
        print("Yes, the call queue is empty.")
    else:
        print("No, there are pending calls in queue.")

while True:
    print("\n===== CALL CENTER MENU =====")
    print("1. Add Call")
    print("2. Answer Call")
    print("3. View Queue")
    print("4. Check if Queue is Empty")
    print("5. Exit")

    choice = input("Enter your choice: ")

    if choice == '1':
        addCall()
    elif choice == '2':
        answerCall()
    elif choice == '3':
        viewQueue()
    elif choice == '4':
        isQueueEmpty()
    elif choice == '5':
        print("Exiting... Goodbye!")
        break
    else:
        print("Invalid choice! Try again.")
